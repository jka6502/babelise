<!DOCTYPE HTML>
<html>

	<head>

		<title>Test'em</title>

		<link rel="stylesheet" href="/testem/mocha.css">
		{{#styles}}<link rel="stylesheet" href="{{.}}">{{/styles}}

		<script src="/testem/mocha.js"></script>
		<script src="/testem.js"></script>
		<script>mocha.setup('bdd')</script>

		<script src='../babelise.js'></script>

		<script type='module'>
			var files = [];
			{{#serve_files}}
			files.push('{{{src}}}');
			{{/serve_files}}

			System.baseURL = '/';

			files = files.map(function(filename) {
				// Strip '.js' suffix from filename
				return filename.substring(0, filename.length - 3);
			});

			var index = 0;

			function importNext() {
				if (index >= files.length) {
					mocha.run();
				}else{
					System.import(files[index++]).then(importNext);
				}
			}

			importNext();


		</script>

	</head>

	<body>
		<div id="mocha"></div>

	</body>

</html>
